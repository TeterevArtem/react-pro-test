{
  "compilerOptions": {
    "outDir": "./build/",
    "paths": {
      "*": ["./src/*"],
    },
    "ignoreDeprecations": "5.0",
    "noImplicitAny": true,
    "module": "nodenext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["./src", "./global.d.ts"]
}
