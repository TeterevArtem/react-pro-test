{
  "compilerOptions": {
    "outDir": "./build/",
    "paths": {
      "*": ["./src/*"],
      "include": ["./declaration.d.ts"],
    },
    "noImplicitAny": true,
    "module": "nodenext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  }
}